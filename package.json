{
  "name": "KindResponse",
  "version": "1.0.0",
  "description": "An simple application to create a very kind responses for better every day expirience.",
  "author": "Stanislav Klymoshenko",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test:module": "jest --testMatch='**/test/module/**/*.spec.(js|jsx|ts|tsx)' --coverage --colors --no-cache --coverageReporters='text' --coverageReporters='text-summary'",
    "test:snapshot": "jest --testMatch='**/test/snapshot/**/*.spec.(js|jsx|ts|tsx)'"
  },
  "dependencies": {
    "nuxt": "^2.0.0",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "@nuxtjs/pwa": "^3.0.0-0"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^0.6.0",
    "@nuxtjs/eslint-config-typescript": "^1.0.0",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/tailwindcss": "^1.0.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^6.1.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "jest": "^24.1.0",
    "jest-serializer-vue": "^2.0.2",
    "nodemon": "^1.18.9",
    "ts-jest": "^25.0.0",
    "vue-jest": "^4.0.0-0"
  }
}
